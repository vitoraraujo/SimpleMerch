        <td><%= number_to_currency(good.buy_price,  :unit => "R$ ", :separator => ",", :delimiter => ".") %></td>
        <td><%= good.buyed_from %></td>
        <td><%= good.kind %></td>
        <td><%= good.buy_day %></td>
        <td><%= good.buy_month %></td>
        <td><%= good.buy_year %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

