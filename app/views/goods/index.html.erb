<% if @goods.any? %>
	<div style="max-width: 500px; margin-left: auto; margin-right: auto; text-align: left; margin-right: 10px; margin-left: 10px;">
		 <span style="font-size: 1.3em;">Mercadorias em estoque:</span>
		 <span style="float: right;"><%= link_to "Busca", goods_buscando_path %></span>	
	</div>
	<div  align="center" style="padding-bottom: 50px; width: 100%; min-width: 320px;">
		<%= render @goods %>
		<%= link_to "Nova entrada de mercadoria?", new_good_path %>
	</div>

<% else %>
	<section align="center">
		<article style="text-align: center; margin: 10px; margin-top: 60px;">
			<h3>Nenhuma mercadoria em estoque... <br><%= link_to "Cadastrar entrada de uma mercadoria?", new_good_path %></h3>
		</article>
	</section>
<% end %>

<div align="center" class="navbar navbar-fixed-bottom footer">
	<div class="inlineblockDiv">
		<div style="text-align: left;">
			<span style="font-size: 1.3em; color: white;">Total</span>
		</div>
		<div>
		<div class="inlineblockDiv" style="text-align: left;">
			<b style="font-size: 1.1em;">Valor em estoque:</b>
			<br>
			<b style="font-size: 1.1em;">Quantidade em estoque:</b>
		</div>
		<div class="inlineblockDiv" style="text-align: right;">
			<span style="color: green; font-size: 1.2em;"><%= number_to_currency(@stock_value,  :unit => "R$ ", :separator => ",", :delimiter => ".") %></span><br>
			<span style="font-size: 1.2em;"><%= @stock_quantity %></span>
		</div>
		</div>
	</div>
</div>

