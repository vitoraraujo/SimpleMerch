<h3 align="center">Despesa:</h3>

<div class="formDiv row">
  <%= form_for @expense, html: { autocomplete: "off" } do |f| %> 
    <div style="text-align: left;">
      <%= f.label :cost, "Custo: (R$)" %>
      <%= f.text_field :cost, step: 0.01, :placeholder => 'ex.: 12,34', class: 'form-control'%>

    <div style="width: auto;">
      <div class="inlineblockDiv">
        <%= f.label :day, "Dia:" %>
        <%= f.text_field :day, class: 'form-control', style: "width: 45px;" %>
      </div>

      <div class="inlineblockDiv">
        <%= f.label :month, "MÃªs:" %>
        <%= f.text_field :month, class: 'form-control', style: "width: 45px;" %>
      </div>

      <div class="inlineblockDiv">
        <%= f.label :year, "Ano:" %>
        <%= f.text_field :year,:placeholder => '2018', class: 'form-control', style: "width: 60px;" %>
      </div>
    </div>

      <%= f.label :kind, "Tipo de custo: (Opcional)" %>
      <%= f.text_field :kind, :placeholder => 'ex.: Transporte, Frete, Reparo..', class: 'form-control' %>

      <%= f.label :reason, "Motivo: (Opcional)" %>
      <%= f.text_field :reason, :placeholder => 'ex.: Ir ao fornecedor..', class: 'form-control' %>
    </div>
    <br>
  <%= f.submit "Cadastrar despesa", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to "Voltar", :back %>