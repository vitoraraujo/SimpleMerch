<h3 align="center">Editando informações do usuário</h3>

<div class="formDiv row">
  <%= form_for @user, html: { autocomplete: "off" } do |f| %>
    <div style="text-align: left;">
      <%= f.label :name, "Nome:" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password,"Senha:" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirme sua senha:" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
      <br>
      <%= f.submit "Editar minha conta", class: "btn btn-primary" %>
  <% end %>
    <br>
    <%= link_to "Voltar", root_path%></p>
</div>