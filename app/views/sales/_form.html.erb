      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= @good.description %>
  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :sell_price %>
    <%= form.text_field :sell_price, step: 0.01  %>
  </div>

  <div class="field">
    <%= form.label :sold_to %>
    <%= form.text_field :sold_to %>
  </div>

  <div class="field">
    <%= form.label :sell_day %>
    <%= form.number_field :sell_day %>
  </div>

  <div class="field">
    <%= form.label :sell_month %>
    <%= form.number_field :sell_month %>
  </div>

  <div class="field">
    <%= form.label :sell_year %>
    <%= form.number_field :sell_year %>
  </div>

  <%= form.hidden_field :good_id, :value => @good.id %>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
