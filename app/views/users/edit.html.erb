<h1>Editando informações do usuário</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(@user) do |f| %>
      <%= f.label :name, "Nome:" %>
      <%= f.text_field :name %>

      <%= f.label :password,"Senha:" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirme sua senha:" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Editar minha conta", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "Voltar", root_path%></p>
  </div>
</div>